<div class="row g-4 mb-5 text-center">
  <div class="col-md-4">
    <div class="card text-white bg-primary shadow">
      <div class="card-body">
        <h5><i class="bi bi-people-fill me-2"></i>Total Users</h5>
        <h3><%= totalUsers %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-success shadow">
      <div class="card-body">
        <h5><i class="bi bi-person-workspace me-2"></i>Teachers</h5>
        <h3><%= totalTeachers %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-info shadow">
      <div class="card-body">
        <h5><i class="bi bi-mortarboard-fill me-2"></i>Students</h5>
        <h3><%= totalStudents %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card text-dark bg-warning shadow">
      <div class="card-body">
        <h5><i class="bi bi-journal-text me-2"></i>Courses</h5>
        <h3><%= totalCourses %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card text-white bg-danger shadow">
      <div class="card-body">
        <h5><i class="bi bi-list-check me-2"></i>Tasks</h5>
        <h3><%= totalTasks %></h3>
      </div>
    </div>
  </div>
</div>

<div class="card mt-4 shadow-sm">
  <div class="card-header bg-success text-white">
    <i class="bi bi-book-fill me-2"></i>Tasks per Course
  </div>
  <ul class="list-group list-group-flush">
    <% tasksPerCourse.forEach(course => { %>
      <li class="list-group-item d-flex justify-content-between">
        <strong><i class="bi bi-journal-bookmark-fill me-2"></i><%= course.title %></strong>
        <span class="badge bg-info text-dark"><%= course.tasks.length %> tasks</span>
      </li>
    <% }) %>
  </ul>
</div>

<div class="card mt-4 shadow-sm">
  <div class="card-header bg-warning text-dark">
    <i class="bi bi-person-fill me-2"></i>Tasks per Student
  </div>
  <ul class="list-group list-group-flush">
    <% tasksPerStudent.forEach(student => { %>
      <li class="list-group-item d-flex justify-content-between">
        <span><i class="bi bi-person-circle me-2"></i><%= student.name %></span>
        <span class="badge bg-dark"><%= student.tasksCreated.length %> tasks</span>
      </li>
    <% }) %>
  </ul>
</div>
