<div class="row g-4 mb-5 text-center">
  <div class="col-md-4">
    <div class="card text-white bg-primary shadow">
      <div class="card-body">
        <h5>Total Users</h5>
        <h3><%= totalUsers %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-success shadow">
      <div class="card-body">
        <h5>Teachers</h5>
        <h3><%= totalTeachers %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-info shadow">
      <div class="card-body">
        <h5>Students</h5>
        <h3><%= totalStudents %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card text-dark bg-warning shadow">
      <div class="card-body">
        <h5>Courses</h5>
        <h3><%= totalCourses %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card text-white bg-danger shadow">
      <div class="card-body">
        <h5>Tasks</h5>
        <h3><%= totalTasks %></h3>
      </div>
    </div>
  </div>
</div>
<div class="card mt-4 shadow-sm">
  <div class="card-header bg-success text-white">
    📚 Tasks per Course
  </div>
  <ul class="list-group list-group-flush">
    <% tasksPerCourse.forEach(course => { %>
      <li class="list-group-item d-flex justify-content-between">
        <strong><%= course.title %></strong>
        <span class="badge bg-info text-dark"><%= course.tasks.length %> tasks</span>
      </li>
    <% }) %>
  </ul>
</div>
<div class="card mt-4 shadow-sm">
  <div class="card-header bg-warning text-dark">
    🎓 Tasks per Student
  </div>
  <ul class="list-group list-group-flush">
    <% tasksPerStudent.forEach(student => { %>
      <li class="list-group-item d-flex justify-content-between">
        <%= student.name %>
        <span class="badge bg-dark"><%= student.tasksCreated.length %> tasks</span>
      </li>
    <% }) %>
  </ul>
</div>

